    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listagem dos Usuários</title>
</head>
<body>
    <h3>Adicionar Usuários</h3>

    <table>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>E-mail</th>
            <th>Senha</th>
            <th>Foto</th>
            <th>|</th>
            <th>Deletar Usuário</th>
        </tr>
        <% Usuarios.forEach(function(usuario){ %>
        <tr>
            <td><%=usuario.id%></td>
            <td><%=usuario.nome%></td>
            <td><%=usuario.email%></td>
            <td><%=usuario.senha%></td>
            <td>
                <img src="/upload/<%=usuario.foto%>" width="80px" />
            </td>
            <td>
                <a href="/admin/usuario/del/<%=usuario.id%>">Deletar Usuário</a>
            </td>
        </tr>
        <% }); %>
    </table>
</body>
</html>